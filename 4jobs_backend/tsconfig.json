{
  "compilerOptions": {
    "target": "es6",                          // ES6 or higher
    "module": "commonjs",                     // CommonJS for Node.js
    "outDir": "./dist",                       // Output directory for compiled files
    "strict": true,                          // Enable all strict type-checking options
    "esModuleInterop": true,                 // Enable ES module interoperability
    "skipLibCheck": true,                    // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Ensure consistent casing in file names
    "emitDecoratorMetadata": true,           // Emit metadata for decorators
    "experimentalDecorators": true,           // Enable experimental decorators
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "moduleResolution": "node"
  },
  "include": ["src/**/*", "src/types.ts"],                    // Include all files in src
  "exclude": ["node_modules", "**/*.spec.ts"] // Exclude node_modules and spec files
}
